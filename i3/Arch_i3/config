################ Exit #####################
set $mode_system System (l) lock, (e) logout, (h) hibernate,(g) suspend, (r) reboot, (s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id i3lock -i  ~/Pictures/wall/lock.png, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym h exec --no-startup-id sudo systemctl hibernate, mode "default"
    bindsym g exec --no-startup-id "i3lock -i  ~/Pictures/wall/lock.png && sudo systemctl hybrid-sleep  ", mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym s exec --no-startup-id systemctl poweroff, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+shift+e mode "$mode_system"
